<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

 <Button
     android:id="@+id/first_page_button"
     android:layout_width="236dp"
     android:layout_height="68dp"
     android:layout_marginTop="300dp"
     android:text="На первую"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <Button
     android:id="@+id/second_page_button"
     android:layout_width="233dp"
     android:layout_height="72dp"
     android:layout_marginTop="20dp"
     android:text="на вторую"
     app:layout_constraintEnd_toEndOf="@id/first_page_button"
     app:layout_constraintStart_toStartOf="@id/first_page_button"
     app:layout_constraintTop_toBottomOf="@id/first_page_button" />

</androidx.constraintlayout.widget.ConstraintLayout>